# Production Environment Configuration
VITE_ENVIRONMENT=production

# Backend API Configuration (Update with your production API URL)
VITE_API_BASE_URL=https://your-backend-api.vercel.app
VITE_API_TIMEOUT=15000

# App Configuration
VITE_APP_NAME=FlowDownloader
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Universal Media Downloader
VITE_APP_URL=https://flowdownloader.vercel.app

# Feature Flags for Production
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENTS=false
VITE_ENABLE_AUTH=false
VITE_ENABLE_PWA=true

# Performance Settings
VITE_ENABLE_SOURCE_MAPS=false
VITE_ENABLE_COMPRESSION=true